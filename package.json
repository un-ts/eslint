{
  "name": "@rxts/eslint",
  "version": "0.0.0",
  "repository": "git+https://github.com/rx-ts/eslint.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:r": "r -f esm,es2015",
    "build:tsc": "tsc -b",
    "clean": "rimraf packages/*/{lib,*.tsbuildinfo}",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache -f friendly --max-warnings 10",
    "postinstall": "simple-git-hooks && yarn-deduplicate --strategy fewer || exit 0",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "test": "jest",
    "typecov": "type-coverage"
  },
  "devDependencies": {
    "@1stg/lib-config": "^1.2.10",
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@types/eslint": "^7.2.10",
    "@types/htmlhint": "^0.9.2",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "type-coverage": "^2.17.2",
    "typescript": "^4.2.4",
    "yarn-deduplicate": "^3.1.0"
  },
  "commitlint": {
    "extends": "@1stg"
  },
  "eslintConfig": {
    "extends": "@1stg"
  },
  "eslintIgnore": [
    "coverage",
    "lib",
    "test/fixtures",
    "CHANGELOG.md"
  ],
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "moduleNameMapper": {
      "eslint-plugin-htm": "<rootDir>/packages/htm/src",
      "eslint-plugin-markup": "<rootDir>/packages/markup/src"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/package.json"
    ]
  },
  "prettier": "@1stg/prettier-config",
  "remarkConfig": {
    "plugins": [
      "@1stg/remark-config"
    ]
  },
  "renovate": {
    "extends": [
      "@1stg"
    ]
  },
  "type-coverage": {
    "detail": true,
    "strict": true,
    "update": true
  }
}
