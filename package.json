{
  "name": "@unts/eslint",
  "version": "0.0.0",
  "type": "module",
  "description": "Incredible ESLint plugins, make ESLint greater",
  "repository": "git+https://github.com/un-ts/eslint.git",
  "homepage": "https://eslint-plugins.vercel.app",
  "author": "JounQin (https://www.1stG.me) <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.7.0",
  "scripts": {
    "build": "run-p 'build:*'",
    "build:r": "r -f cjs",
    "build:tsc": "tsc -b",
    "clean": "rimraf coverage dist packages/*/{lib,node_modules,*.tsbuildinfo}",
    "dev": "yarn docs:dev",
    "docs:build": "vite build",
    "docs:dev": "vite dev",
    "docs:preview": "vite serve",
    "lint": "run-p 'lint:*'",
    "lint:es": "eslint . --cache -f friendly --max-warnings 10",
    "lint:style": "stylelint . --cache",
    "lint:ts": "tsc -p tsconfig.base.json --noEmit",
    "prepare": "simple-git-hooks || exit 0",
    "prettier": "prettier --log-level error",
    "release": "changeset publish",
    "serve": "yarn docs:preview",
    "test": "vitest run --coverage",
    "typecov": "type-coverage",
    "vercel-build": "yarn docs:build"
  },
  "devDependencies": {
    "@1stg/app-config": "^11.0.1",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.1",
    "@commitlint/cli": "^19.8.0",
    "@markuplint/rule-textlint": "^4.7.18",
    "@mdx-js/rollup": "^3.1.0",
    "@pkgr/rollup": "^6.0.0",
    "@textlint/textlint-plugin-markdown": "^14.4.2",
    "@textlint/textlint-plugin-text": "^14.4.2",
    "@types/htmlhint": "^1.1.5",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/web": "^0.0.208",
    "@typescript-eslint/rule-tester": "^8.26.0",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "@vitest/coverage-istanbul": "^3.0.8",
    "dictionary-en": "^4.0.0",
    "eslint": "^9.22.0",
    "github-markdown-css": "^5.8.1",
    "lint-staged": "^15.4.3",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.3.0",
    "retext-emoji": "^9.0.0",
    "retext-english": "^5.0.0",
    "retext-spell": "^6.1.0",
    "sass": "^1.85.1",
    "simple-git-hooks": "JounQin/simple-git-hooks#feat/esm_config",
    "stylelint": "^16.15.0",
    "textlint": "^14.4.2",
    "textlint-rule-max-comma": "^4.0.0",
    "textlint-rule-no-zero-width-spaces": "^1.0.1",
    "type-coverage": "^2.29.7",
    "typescript": "^5.8.2",
    "unplugin-auto-import": "^19.1.1",
    "vite": "^6.2.1",
    "vitest": "^3.0.8"
  },
  "resolutions": {
    "prettier": "^3.5.3"
  },
  "commitlint": {
    "extends": "@1stg"
  },
  "markuplint": {
    "extends": "@1stg/markuplint-config"
  },
  "prettier": "@1stg/prettier-config",
  "remarkConfig": {
    "plugins": [
      "@1stg/preset"
    ]
  },
  "renovate": {
    "extends": [
      "@1stg"
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreCatch": true,
    "ignoreNonNullAssertion": true,
    "strict": true,
    "update": true
  }
}
