{
  "name": "@unts/eslint",
  "version": "0.0.0",
  "type": "module",
  "description": "Incredible ESLint plugins, make ESLint greater",
  "repository": "git+https://github.com/un-ts/eslint.git",
  "homepage": "https://eslint-plugins.vercel.app",
  "author": "JounQin <admin@1stg.me> (https://www.1stG.me)",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.9.1",
  "scripts": {
    "build": "run-p 'build:*'",
    "build:r": "r -f cjs",
    "build:tsc": "tsc -b",
    "clean": "rimraf -g .type-coverage coverage dist '.*cache' 'packages/*/{lib,node_modules,*.tsbuildinfo}'",
    "dev": "yarn docs:dev",
    "docs:build": "vite build",
    "docs:dev": "vite dev",
    "docs:preview": "vite serve",
    "format": "prettier --write .",
    "lint": "run-p 'lint:*'",
    "lint:es": "eslint . --cache --max-warnings 10",
    "lint:style": "stylelint . --cache",
    "lint:ts": "tsc -b --noEmit",
    "prepare": "simple-git-hooks && yarn-berry-deduplicate || exit 0",
    "release": "changeset publish",
    "serve": "yarn docs:preview",
    "test": "vitest run --coverage",
    "typecov": "type-coverage",
    "vercel-build": "yarn docs:build",
    "version": "changeset version && yarn --no-immutable"
  },
  "devDependencies": {
    "@1stg/app-config": "^14.0.0",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.1",
    "@commitlint/cli": "^19.8.0",
    "@markuplint/rule-textlint": "^4.7.19",
    "@mdx-js/rollup": "^3.1.0",
    "@oxc-node/core": "^0.0.27",
    "@pkgr/rollup": "^6.0.3",
    "@shikijs/rehype": "^3.2.2",
    "@textlint/textlint-plugin-markdown": "^14.6.0",
    "@textlint/textlint-plugin-text": "^14.6.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/htmlhint": "^1.1.5",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/web": "^0.0.236",
    "@typescript-eslint/rule-tester": "^8.30.1",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "@vitest/coverage-istanbul": "^3.1.1",
    "@vitest/eslint-plugin": "^1.1.42",
    "dictionary-en": "^4.0.0",
    "eslint": "^9.24.0",
    "eslint-plugin-markup": "link:packages/markup",
    "github-markdown-css": "^5.8.1",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^8.0.0",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.5.0",
    "rehype-slug": "^6.0.0",
    "retext-emoji": "^9.0.0",
    "retext-english": "^5.0.0",
    "retext-spell": "^6.1.0",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.12.1",
    "stylelint": "^16.18.0",
    "textlint": "^14.6.0",
    "textlint-rule-max-comma": "^4.0.0",
    "textlint-rule-no-zero-width-spaces": "^1.0.1",
    "type-coverage": "^2.29.7",
    "typescript": "^5.8.3",
    "vite": "^6.2.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1",
    "yarn-berry-deduplicate": "^6.1.1"
  },
  "resolutions": {
    "eslint-plugin-markup": "workspace:*",
    "eslint-plugin-utils": "workspace:*",
    "prettier": "^3.5.3"
  },
  "commitlint": {
    "extends": "@1stg"
  },
  "markuplint": {
    "extends": "@1stg/markuplint-config"
  },
  "prettier": "@1stg/prettier-config",
  "remarkConfig": {
    "plugins": [
      "@1stg/preset"
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreCatch": true,
    "ignoreNonNullAssertion": true,
    "strict": true,
    "update": true
  }
}
