{
  "name": "@rxts/eslint",
  "version": "0.0.0",
  "description": "Incredible ESLint plugins, make ESLint greater.",
  "repository": "git+https://github.com/rx-ts/eslint.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:r": "r -f esm,es2015",
    "build:ts": "tsc -b",
    "clean": "rimraf packages/*/{lib,*.tsbuildinfo}",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache -f friendly --max-warnings 10",
    "lint:ts": "tsc -p tsconfig.base.json --noEmit",
    "postinstall": "simple-git-hooks && yarn-deduplicate --strategy fewer || exit 0",
    "release": "changeset publish",
    "test": "jest",
    "typecov": "type-coverage"
  },
  "devDependencies": {
    "@1stg/lib-config": "^3.0.0",
    "@changesets/changelog-github": "^0.4.2",
    "@changesets/cli": "^2.20.0",
    "@markuplint/rule-textlint": "^0.2.0-alpha.1",
    "@types/eslint": "^7.29.0",
    "@types/htmlhint": "^0.9.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.1",
    "textlint-rule-max-comma": "^2.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "type-coverage": "^2.20.0",
    "typescript": "^4.3.5"
  },
  "commitlint": {
    "extends": "@1stg"
  },
  "eslintConfig": {
    "extends": "@1stg"
  },
  "eslintIgnore": [
    "coverage",
    "**/lib",
    "**/test/fixtures",
    "**/CHANGELOG.md"
  ],
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "moduleNameMapper": {
      "eslint-plugin-htm": "<rootDir>/packages/htm/src",
      "eslint-plugin-markup": "<rootDir>/packages/markup/src",
      "eslint-plugin-utils": "<rootDir>/packages/utils/src"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/package.json"
    ]
  },
  "prettier": "@1stg/prettier-config",
  "remarkConfig": {
    "plugins": [
      "@1stg/remark-config"
    ]
  },
  "renovate": {
    "extends": [
      "@1stg"
    ]
  },
  "typeCoverage": {
    "atLeast": 99.6,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreCatch": true,
    "ignoreNonNullAssertion": true,
    "strict": true,
    "update": true
  }
}
